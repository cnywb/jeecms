<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.bbs.entity">
	<class
		name="BbsTopic"
		table="BBS_TOPIC"
		discriminator-value="0">
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Integer"
			column="TOPIC_ID"
			>
			<generator class="sequence"><param name="sequence">s_BBS_TOPIC</param></generator>
		</id>
		<discriminator column="CATEGORY" type="integer"/>
		<property
			name="title"
			column="TITLE"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="createTime"
			column="CREATE_TIME"
			type="timestamp"
			not-null="true"
			/>
		<property
			name="lastTime"
			column="LAST_TIME"
			type="timestamp"
			not-null="true"
			/>
		<property
			name="sortTime"
			column="SORT_TIME"
			type="timestamp"
			not-null="true"
			/>
		<property
			name="viewCount"
			column="VIEW_COUNT"
			type="java.lang.Long"
			not-null="true"
			length="19"
			/>
		<property
			name="replyCount"
			column="REPLY_COUNT"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="viewsDay"
			column="views_day"
			type="java.lang.Long"
			not-null="true"
			length="11"
			/>
		<property
			name="viewsWeek"
			column="views_week"
			type="java.lang.Long"
			not-null="true"
			length="11"
			/>
		<property
			name="viewsMonth"
			column="views_month"
			type="java.lang.Long"
			not-null="true"
			length="11"
			/>
		<property
			name="replyCountDay"
			column="replycount_day"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="topLevel"
			column="TOP_LEVEL"
			type="java.lang.Short"
			not-null="true"
			length="5"
			/>
		<property
			name="primeLevel"
			column="PRIME_LEVEL"
			type="java.lang.Short"
			not-null="true"
			length="5"
			/>
		<property
			name="styleBold"
			column="STYLE_BOLD"
			type="java.lang.Boolean"
			not-null="true"
			/>
		<property
			name="styleItalic"
			column="STYLE_ITALIC"
			type="java.lang.Boolean"
			not-null="true"
			/>
		<property
			name="styleColor"
			column="STYLE_COLOR"
			type="string"
			not-null="false"
			length="6"
			/>
		<property
			name="styleTime"
			column="STYLE_TIME"
			type="timestamp"
			not-null="false"
			/>
		<property
			name="outerUrl"
			column="OUTER_URL"
			type="string"
			not-null="false"
			length="255"
			/>
		<property
			name="status"
			column="STATUS"
			type="java.lang.Short"
			not-null="true"
			length="5"
			/>
		<property
			name="affix"
			column="IS_AFFIX"
			type="java.lang.Boolean"
			not-null="true"
			/>
		<property
			name="moderatorReply"
			column="moderator_reply"
			type="java.lang.Boolean"
			not-null="true"
			/>
		<property
			name="haveReply"
			column="HAVA_REPLY"
			type="java.lang.String"
			not-null="false"
			/>
		<property
			name="allayReply"
			column="ALLAY_REPLY"
			type="java.lang.Boolean"
			not-null="false"
			/>
		<property
			name="hasSofeed"
			column="HAS_SOFAED"
			type="java.lang.Boolean"
			not-null="false"
			/>
		<one-to-one
			name="topicText"
			class="BbsTopicText"
			cascade="all"
			/>
		<property
			name="isHeadline"
			column="IS_HEADLINE"
			type="java.lang.Boolean"
			not-null="false"
			/>
		
			<property
			name="isForbidReply"
			column="IS_FORBID_REPLY"
			type="java.lang.Boolean"
			not-null="false"
			/>
			<property
			name="multipleVote"
			column="MULTIPLE_VOTE"
			type="java.lang.Boolean"
			not-null="false"
			/>
			<property
			name="visibleAfterReply"
			column="VISIBLE_AFTER_REPLY"
			type="java.lang.Boolean"
			not-null="false"
			/>
			<property
			name="voteStartTime"
			column="VOTE_START_TIME"
			type="timestamp"
			not-null="false"
			/>
		<property
			name="voteEndTime"
			column="VOTE_END_TIME"
			type="timestamp"
			not-null="false"
			/>
			
		<many-to-one
			name="firstPost"
			column="FIRST_POST_ID"
			class="BbsPost"
			not-null="false"
			>
		</many-to-one>
		<many-to-one
			name="site"
			column="site_id"
			class="com.jeecms.cms.entity.main.CmsSite"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="forum"
			column="FORUM_ID"
			class="BbsForum"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="lastPost"
			column="LAST_POST_ID"
			class="BbsPost"
			not-null="false"
			>
		</many-to-one>
		<many-to-one
			name="creater"
			column="creater_id"
			class="BbsUser"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="lastReply"
			column="replyer_id"
			class="BbsUser"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="postType"
			column="TYPE_ID"
			class="BbsPostType"
			not-null="true"
			>
		</many-to-one>
		
		<subclass name="BbsVoteTopic" discriminator-value="1">
			<property name="totalCount" column="TOTAL_COUNT" not-null="false"></property>
		</subclass>
	</class>
	
	<class name="BbsTopicDraft" table="BBS_TOPIC_DRAFT">
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Long"
			column="ID"
			>
			<generator class="sequence"><param name="sequence">SEQ_BBS_TOPIC_DRAFT_ID</param></generator>
		</id>
		<property name="title" column="TITLE" type="string" not-null="true"/>
		<property name="content" column="CONTENT" type="string" not-null="true"/>
		<property name="postTypeId" column="POST_TYPE_ID" type="integer" not-null="true"/>
		<property name="forumId" column="FORUM_ID" type="integer" not-null="true"/>
		<property name="userId" column="USER_ID" type="integer" not-null="true"/>
		
		<property
			name="createTime"
			column="CREATE_TIME"
			type="timestamp"
			not-null="true"
			/>
		<property
			name="updateTime"
			column="UPDATE_TIME"
			type="timestamp"
			not-null="true"
			/>
	</class>
</hibernate-mapping>